<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Text, Image &amp; CTA"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_container_v1">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <spacing-tab
                jcr:primaryType="nt:unstructured"
                jcr:title="Spacing"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <properties
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Configurations"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                	<category
                                                        granite:hide="${cqDesign.linkDisabled}"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Select Product Category"
                                                        name="./productCategory">
                                                        <datasource
                                                            jcr:primaryType="nt:unstructured"
                                                           	rootPath ="/content/lead2loyalty/language-masters/en/home-page/products"
                                                            sling:resourceType="/apps/dropDownListing"/>
                                                    </category>
                                                    <title
                                                        granite:hide="${cqDesign.linkDisabled}"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Title"
                                                        name="./title"/>
                                                    <text
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                                        path="/apps/xpbootstrap/components/master/atoms/atmText/v1/atmText/properties"/>
                                                    <image
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                        class="cq-droptarget"
                                                        fieldLabel="Image"
                                                        fileNameParameter="./fileName"
                                                        fileReferenceParameter="./fileReference"
                                                        mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                        name="./file"/>
                                                    <imgAlign
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Select Image Position"
                                                        name="./imgAlignment">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <right
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Image On Right"
                                                                value="img-right"/>
                                                            <left
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Image On Left"
                                                                value="img-left"/>
                                                        </items>
                                                    </imgAlign>
                                                    <imgAlt
                                                        granite:hide="${cqDesign.linkDisabled}"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldLabel="Image Alt Text"
                                                        name="./imageAlt"/>
													<productScrollId
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Product Scroll ID should be same as corresponding Tiles component, for scroll to work properly"
                                                        fieldLabel="Product Scroll ID"
                                                        name="./productScrollId"/>
                                                    <openRequestQuoteForm
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Enable Request a Quote Form."
                                                        name="./openRequestQuoteForm"
                                                        text="Enable Request a Quote Form"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <multifield
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        aem-max-items="12"
                                                        aem-min-items="1"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Click &quot;Add&quot; to add CTA Buttons">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                            name="./ctaButton">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <item1
                                                                    jcr:primaryType="nt:unstructured"
                                                                    jcr:title="Click to Expand"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <card
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="xpbootstrap/components/master/widgets/include"
                                                                            path="/apps/xpbootstrap/components/master/atoms/atmCta/v1/atmCta/properties"/>
                                                                    </items>
                                                                </item1>
                                                            </items>
                                                        </field>
                                                    </multifield>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </properties>
                            <spacing
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="xpbootstrap/components/master/atoms/dialogs/spacing"/>
                        </items>
                    </columns>
                </items>
            </spacing-tab>
        </items>
    </content>
</jcr:root>
