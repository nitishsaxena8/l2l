<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header Links Component"
    sling:resourceType="cq/gui/components/authoring/dialog"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <navigation
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Navigation Links"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <expandedItems
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Links"
                                validation="multifield-max-item-validator">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./utilityLinks">
                                    <items jcr:primaryType="nt:unstructured">
                                        <linktitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Link Title"
                                            fieldDescription="Please Enter Link Title."
                                            fieldLabel="Link Title"
                                            name="./tr_linkTitle"
                                            required="{Boolean}true"/>
                                        <linkurl
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            emptyText="Link URL"
                                            fieldDescription="Please Enter Link URL."
                                            fieldLabel="Link URL"
                                            name="./linkUrl"
                                            required="{Boolean}true"
                                            rootPath="/content"/>
                                        <openinnewwindow
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldDescription="Checking the box, the link will open on new tab."
                                            name="./openInNewWindow"
                                            text="Open In New Tab"
                                            uncheckedValue="false"
                                            value="true"/>
                                        <subpages
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                            composite="{Boolean}true"
                                            fieldLabel="Secondary Pages">
                                            <field
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                name="./secondaryLinks">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <linktitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="Secondary Link Title"
                                                        fieldDescription="Please Enter Link Title."
                                                        fieldLabel="Secondary Link Title"
                                                        name="./tr_secondarylinkTitle"
                                                        required="{Boolean}true"/>
                                                    <linkurl
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        emptyText="Secondary Link URL"
                                                        fieldDescription="Please Enter Link URL."
                                                        fieldLabel="Secondary Link URL"
                                                        name="./secondarylinkUrl"
                                                        required="{Boolean}true"
                                                        rootPath="/content"/>
                                                    <openinnewwindow
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Checking the box, the link will open on new tab."
                                                        name="./openInNewWindowsecondary"
                                                        text="Open In New Tab for Secondary Link"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                </items>
                                            </field>
                                        </subpages>
                                        <SignUpPageUrl
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            emptyText="SignUp Page URL"
                                            fieldDescription="Please Enter SignUp Page URL."
                                            fieldLabel="SignUp Page URL"
                                            name="./SignUpPageUrl"
                                            required="{Boolean}true"
                                            rootPath="/content"/>
                                    </items>
                                </field>
                            </expandedItems>
                        </items>
                    </navigation>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
