<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Search Result"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[lead2loyalty.author]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <search
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Search"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <searchRootPath
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                fieldDescription="AEM Search Root Path"
                                                fieldLabel="AEM Search Root Path"
                                                name="./rootPagePath"
                                                rootPath="/content/"/>
                                            <searchButtonText
                                                granite:hide="${cqDesign.linkDisabled}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Search Button text"
                                                name="./searchButtonText"/>
                                            <sortByText
                                                granite:hide="${cqDesign.linkDisabled}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Sort By Text"
                                                name="./sortByText"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </search>
                    <filters
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Search Filter Details"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <filterLabel
                                                granite:hide="${cqDesign.linkDisabled}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Search Filter Label"
                                                name="./searchFilterLabel"/>
                                            <filterDescription
                                                granite:hide="${cqDesign.linkDisabled}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Search Filter Description"
                                                name="./searchFilterDescription"/>
                                            <clearFilterText
                                                granite:hide="${cqDesign.linkDisabled}"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Clear Filter Text"
                                                name="./clearFilterText"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </filters>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
