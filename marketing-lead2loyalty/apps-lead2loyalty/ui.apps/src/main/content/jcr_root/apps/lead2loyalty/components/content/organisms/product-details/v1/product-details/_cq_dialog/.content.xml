<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Product Details"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.container.v1.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_container_v1"
    trackingFeature="core-components:container:v1">
    <content
        granite:class="cmp-container__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <columns
                jcr:primaryType="nt:unstructured"
                jcr:title="Spacing"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <properties
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Properties"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <titleAndId
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/accordion">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <coulmns
                                                                jcr:primaryType="nt:unstructured"
                                                                jcr:title="Title and ID"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <subtitle
                                                                        granite:hide="${cqDesign.linkDisabled}"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Sub Title"
                                                                        name="./subtitle"/>
                                                                    <title
                                                                        granite:hide="${cqDesign.linkDisabled}"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Title"
                                                                        name="./title"/>
                                                                    <productid
                                                                        granite:hide="${cqDesign.linkDisabled}"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Product ID"
                                                                        name="./productid"/>
                                                                </items>
                                                            </coulmns>
                                                        </items>
                                                    </titleAndId>
                                                    <description
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/accordion">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <coulmns
                                                                jcr:primaryType="nt:unstructured"
                                                                jcr:title="Description"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <text
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                                                        path="/apps/xpbootstrap/components/master/atoms/atmText/v1/atmText/properties"/>
                                                                </items>
                                                            </coulmns>
                                                        </items>
                                                    </description>
                                                    <cta
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/accordion">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <coulmns
                                                                jcr:primaryType="nt:unstructured"
                                                                jcr:title="CTA Buttons"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <multifield
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                        aem-max-items="12"
                                                                        aem-min-items="1"
                                                                        composite="{Boolean}true"
                                                                        fieldLabel="Click &quot;Add&quot; to add CTA Buttons">
                                                                        <field
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                                            name="./ctaButton">
                                                                            <items jcr:primaryType="nt:unstructured">
                                                                                <item1
                                                                                    jcr:primaryType="nt:unstructured"
                                                                                    jcr:title="Click to Expand"
                                                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                                    <items jcr:primaryType="nt:unstructured">
                                                                                        <card
                                                                                            jcr:primaryType="nt:unstructured"
                                                                                            sling:resourceType="xpbootstrap/components/master/widgets/include"
                                                                                            path="/apps/xpbootstrap/components/master/atoms/atmCta/v1/atmCta/properties"/>
                                                                                    </items>
                                                                                </item1>
                                                                            </items>
                                                                        </field>
                                                                    </multifield>
                                                                </items>
                                                            </coulmns>
                                                        </items>
                                                    </cta>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </properties>
                            <modal
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Share Modal"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                margin="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <modallink
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/accordion">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <column
                                                                jcr:primaryType="nt:unstructured"
                                                                jcr:title="Share with Team Link"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <shareCtaLabel
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Share CTA Label"
                                                                        name="./shareCtaLabel"/>
                                                                    <shareCtaLink
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                        fieldLabel="Share CTA Link"
                                                                        name="./shareCtaLink"/>
                                                                </items>
                                                            </column>
                                                        </items>
                                                    </modallink>
                                                    <modalconfigs
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/accordion">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <column
                                                                jcr:primaryType="nt:unstructured"
                                                                jcr:title="Modal Properties"
                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <modalTitle
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Modal Title"
                                                                        name="./modalTitle"/>
                                                                    <modalDesc
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Modal Description"
                                                                        name="./modalDesc"/>
                                                                    <nameFieldLabel
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Name Field Label"
                                                                        name="./nameFieldLabel"/>
                                                                    <emailIdFieldLabel
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Email ID Field Label"
                                                                        name="./emailIdFieldLabel"/>
                                                                    <modalCtaLabel
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                        fieldLabel="Close CTA Label"
                                                                        name="./modalCtaLabel"/>
                                                                </items>
                                                            </column>
                                                        </items>
                                                    </modalconfigs>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </modal>
                        </items>
                    </columns>
                </items>
            </columns>
        </items>
    </content>
</jcr:root>
