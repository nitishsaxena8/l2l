<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <atmPicture jcr:primaryType="nt:unstructured">
        <properties
            jcr:primaryType="nt:unstructured"
            jcr:title="Properties"
            sling:resourceType="granite/ui/components/coral/foundation/container"
            margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
                <atmPictureDesktopImg
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/fileupload"
                    autoStart="{Boolean}false"
                    class="cq-droptarget"
                    fieldDescription="Drag and Drop Image"
                    fieldLabel="Desktop Image"
                    fileNameParameter="./atmPictureDesktopImgFileName"
                    fileReferenceParameter="./atmPictureDesktopImgFileReference"
                    mimeTypes="[image]"
                    multiple="{Boolean}false"
                    name="./atmPictureDesktopImg"
                    title="Upload Image Asset"
                    uploadUrl="${suffix.path}"
                    useHTML5="{Boolean}true"/>
                <atmPictureMobileImg
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/form/fileupload"
                    autoStart="{Boolean}false"
                    class="cq-droptarget"
                    fieldDescription="Drag and Drop Image. Desktop image will be used when left blank"
                    fieldLabel="Mobile Image"
                    fileNameParameter="./atmPictureMobileImgFileName"
                    fileReferenceParameter="./atmPictureMobileImgFileReference"
                    mimeTypes="[image]"
                    multiple="{Boolean}false"
                    name="./atmPictureMobileImg"
                    title="Upload Image Asset"
                    uploadUrl="${suffix.path}"
                    useHTML5="{Boolean}true"/>
                <atmPictureAltText
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Image Alt"
                    name="./atmPictureAltText"/>
            </items>
        </properties>
        <atmPicture.html/>
    </atmPicture>
</jcr:root>
