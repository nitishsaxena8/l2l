<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <atmCta jcr:primaryType="nt:unstructured">
        <properties
            jcr:primaryType="nt:unstructured"
            jcr:title="Properties"
            sling:resourceType="granite/ui/components/coral/foundation/container"
            margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
                <atmCtaLabel
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldLabel="Link Title"
                    name="./atmCtaLabel"/>
                <atmCtaLink
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                    fieldLabel="Link Href"
                    name="./atmCtaLink"/>
                <atmCtaTarget
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                    name="./atmCtaTarget"
                    text="Open in new tab ?"
                    value="true"/>
                <atmCtaType
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldLabel="CTA Type"
                    name="./atmCtaType">
                    <items jcr:primaryType="nt:unstructured">
                        <default
                            jcr:primaryType="nt:unstructured"
                            text="Default Link"
                            value="btn-link"/>
                        <primary
                            jcr:primaryType="nt:unstructured"
                            text="Primary"
                            value="btn-primary"/>
                        <secondary
                            jcr:primaryType="nt:unstructured"
                            text="Secondary"
                            value="btn-secondary"/>
                        <outline-primary
                            jcr:primaryType="nt:unstructured"
                            text="Outline Primary"
                            value="btn-outline-primary"/>
                        <outline-secondary
                            jcr:primaryType="nt:unstructured"
                            text="Outline Secondary"
                            value="btn-outline-secondary"/>
                        <dark
                            jcr:primaryType="nt:unstructured"
                            text="Dark"
                            value="btn-dark"/>
                        <light
                            jcr:primaryType="nt:unstructured"
                            text="Light"
                            value="btn-light"/>
                        <outline-dark
                            jcr:primaryType="nt:unstructured"
                            text="Outline Dark"
                            value="btn-outline-dark"/>
                        <outline-light
                            jcr:primaryType="nt:unstructured"
                            text="Outline Light"
                            value="btn-outline-light"/>
                    </items>
                </atmCtaType>
                <atmCtaSize
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldLabel="CTA Size"
                    name="./atmCtaSize">
                    <items jcr:primaryType="nt:unstructured">
                        <default
                            jcr:primaryType="nt:unstructured"
                            text="Default"
                            value=""/>
                        <large
                            jcr:primaryType="nt:unstructured"
                            text="Large"
                            value="btn-lg"/>
                        <small
                            jcr:primaryType="nt:unstructured"
                            text="Small"
                            value="btn-sm"/>
                    </items>
                </atmCtaSize>
                <atmCtaRole
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldDescription="Optional support to screen readers"
                    fieldLabel="CTA Role"
                    name="./atmCtaRole"/>
                <atmCtaContext
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                    fieldDescription="Context in which the CTA is used for analytics tracking"
                    fieldLabel="Analytics Context"
                    name="./atmCtaContext"/>
            </items>
        </properties>
        <atmCta.html/>
    </atmCta>
</jcr:root>
