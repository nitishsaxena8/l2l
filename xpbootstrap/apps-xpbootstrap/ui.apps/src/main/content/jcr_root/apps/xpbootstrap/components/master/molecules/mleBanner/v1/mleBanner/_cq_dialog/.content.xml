<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Hero Banner"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <image-tab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Image"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <picture
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                        path="/apps/xpbootstrap/components/master/atoms/atmPicture/v1/atmPicture/properties"/>
                                </items>
                            </columns>
                        </items>
                    </image-tab>
                    <content-tab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Content"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                        path="/apps/xpbootstrap/components/master/atoms/atmTitle/v1/atmTitle/properties"/>
                                    <text
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                        path="/apps/xpbootstrap/components/master/atoms/atmText/v1/atmText/properties"/>
                                    <cta
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                        path="/apps/xpbootstrap/components/master/atoms/atmCta/v1/atmCta/properties"/>
                                </items>
                            </columns>
                        </items>
                    </content-tab>
                    <animation-tab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Animation"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <properties
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Properties"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <columns
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                                margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <column
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <animation
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                name="./animation"
                                                                text="Enable animation ?"
                                                                value="true"/>
                                                            <gradientType
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                fieldLabel="Gradient Type"
                                                                name="./gradientType">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <default
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="None"
                                                                        value=""/>
                                                                    <light
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Light"
                                                                        value="white-backgroud-gradient"/>
                                                                    <dark
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Dark"
                                                                        value="dark-backgroud-gradient"/>
                                                                </items>
                                                            </gradientType>
                                                            <gradientPosition
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                fieldLabel="Gradient Position"
                                                                name="./gradientPosition">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <left
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Left"
                                                                        value="left"/>
                                                                    <right
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Right"
                                                                        value="right"/>
                                                                </items>
                                                            </gradientPosition>
                                                        </items>
                                                    </column>
                                                </items>
                                            </columns>
                                        </items>
                                    </properties>
                                </items>
                            </columns>
                        </items>
                    </animation-tab>
                    <spacing-tab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Spacing"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <spacing
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/include"
                                        path="/apps/xpbootstrap/components/master/atoms/dialogs/spacing"/>
                                </items>
                            </columns>
                        </items>
                    </spacing-tab>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
